<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>ca.uhn.hapi.fhir</groupId>
        <artifactId>hapi-deployable-pom</artifactId>
        <version>6.9.9-SNAPSHOT</version>
        <relativePath>../hapi-deployable-pom/pom.xml</relativePath>
    </parent>
    <artifactId>hapi-fhir-jpaserver-schema</artifactId>
    <name>HAPI FHIR JPA Server - Schema</name>

    <build>
        <plugins>
            <plugin>
                <groupId>ca.uhn.hapi.fhir</groupId>
                <artifactId>hapi-tinder-plugin</artifactId>
                <version>${project.version}</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>generate-ddl</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <packageNames>
                        <packageName>ca.uhn.fhir.jpa.entity</packageName>
                        <packageName>ca.uhn.fhir.jpa.model.entity</packageName>
                    </packageNames>
                    <dialects>
                        <dialect>org.hibernate.dialect.DerbyDialect                        derby_10_7.sql</dialect>
                        <dialect>org.hibernate.dialect.MySQLDialect                        mysql57.sql</dialect>
                        <dialect>org.hibernate.dialect.MariaDBDialect                      mariadb.sql</dialect>
                        <dialect>org.hibernate.dialect.OracleDialect                       oracle12c.sql</dialect>
                        <dialect>org.hibernate.dialect.SQLServerDialect                    sqlserver2012.sql</dialect>
                        <dialect>org.hibernate.dialect.CockroachDialect                    cockroachdb201.sql</dialect>
                        <dialect>ca.uhn.fhir.jpa.model.dialect.HapiFhirH2Dialect           hapifhirh2.sql</dialect>
                        <dialect>ca.uhn.fhir.jpa.model.dialect.HapiFhirPostgres94Dialect   hapifhirpostgres94.sql</dialect>
                    </dialects>
                    <outputDirectory>${project.build.directory}/classes/ca/uhn/hapi/fhir/jpa/docs/database</outputDirectory>
                </configuration>
                <dependencies>
                    <dependency>
                        <groupId>ca.uhn.hapi.fhir</groupId>
                        <artifactId>hapi-fhir-jpaserver-base</artifactId>
                        <version>${project.version}</version>
                    </dependency>
                </dependencies>
            </plugin>
        </plugins>
    </build>

</project>
